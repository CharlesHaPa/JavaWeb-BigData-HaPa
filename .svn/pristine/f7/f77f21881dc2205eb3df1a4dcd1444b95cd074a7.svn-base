@charset "utf-8";
.mask {
	margin: 0;
	padding: 0;
	border: none;
	width: 100%;
	height: 100%;
	background: gray;
	opacity: 0.8;
	filter: alpha(opacity=80);
	z-index: 9999;
	position: fixed;
	top: 0;
	left: 0;
	display: none;
}

